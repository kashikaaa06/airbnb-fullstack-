<%- layout('./layouts/boilerplate') -%>

<div class="container mt-4">
    <h3>All Listings</h3>
   <!---- <form method="GET" action="/listings/new" class="mb-4">
        <button class="btn btn-primary">Create New Listing</button>
    </form>-->

    <div class="row">
        <% for(let listing of allListings) { %>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <a href="/listings/<%= listing._id %>" class="card-link">
                <div class="card h-100">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 200px; object-fit: cover;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text flex-grow-1"><%= listing.description.substring(0, 100) %>...</p>
                        <div class="mt-auto">
                            <p class="card-price fw-bold text-danger">â‚¹<%= listing.price.toLocaleString("en-IN") %></p>
                            <p class="card-location text-muted"><%= listing.location %>, <%= listing.country %></p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</div>